{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row col-md-offset-2 col-md-8">
            <h1>Modifier un Utilisateur</h1>

            {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate', "class": "group"}}) }}
            <div class="form-group">
                {{ form_errors(edit_form.username) }}
                {{ form_label(edit_form.username) }}
                <br>
                {{ form_widget(edit_form.username) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.password) }}
                {{ form_label(edit_form.password) }}
                <br>
                {{ form_widget(edit_form.password) }}
            </div>
            <br>
            <button type="submit" value="Edit" class="btn btn-default">Modifier</button>
            {{ form_end(edit_form) }}

            <p>
                {{ form_start(delete_form) }}
                <button type="submit" value="Delete" class="btn btn-danger">Effacer</button>
                {{ form_end(delete_form) }}
            </p>
            <br>
            <p>
                <a href="{{ path('cms_user_index') }}"><button>Retour Ã  la liste des utilisateurs</button></a>
            </p>
        </div>
    </div>
{% endblock %}
