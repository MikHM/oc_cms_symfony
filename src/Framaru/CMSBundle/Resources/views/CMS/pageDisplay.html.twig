{% extends "base.html.twig" %}
{% import "@CMS/response.html.twig" as response %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <h1>{{ page.title }}</h1>

                <p>
                    <span><small><em>Post√© le {{ page.postedAt | date('d/m/Y') }}</em></small></span>
                        &nbsp;&nbsp;
                    <span class="label label-default">{{ page.category.name }}</span></p>

                <br>

                <p>{{ page.content | raw }}</p>

                <hr class="col-md-4 col-md-offset-4">

            </div>

            <div class="row col-md-8 col-md-offset-2">
                <ul class="list-group">
                    {% for message in allComments if message.parent is null %}
                        {{ response.showComment(message) }}
                    {% endfor %}
                </ul>

                <hr class="col-md-4 col-md-offset-4">

            </div>

            <div class="row col-md-8 col-md-offset-2">
                <br>
                <div class="card">
                    <div class="card-block">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', "class": "form-group"}}) }}
                        {{ form_widget(form) }}
                        <br>
                        <button type="submit" value="Poster" class="btn">Poster</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}