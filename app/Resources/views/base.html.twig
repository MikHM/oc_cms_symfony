<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Jean Forteroche{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.css') }}">
            <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Titillium+Web:300,400" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('vendor/fontawesome/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block nav %}
                <div id="header">
                    <div class="row col-md-offset-2 col-md-8 text-center">
                        <h1 id="logo">Jean FORTEROCHE</h1>
                        <hr>
                    </div>

                    <div class="row col-md-offset-2 col-md-8 ">
                        <a href="{{ path("cms_homepage")}}"> <span class="fa fa-home" aria-hidden="true"></span> </a>
                        {#TODO "Login" link should be removed for the final version of the site#}
                        <a href="{{ path("login") }}" class="identification">Login</a>

                        {% if is_granted("ROLE_ADMIN") %}
                            | <a href="{{ path("cms_page_new") }}"> Créer un billet </a> |
                            <a href="{{ path("cms_category_index") }}"> Catégories </a> |
                            <a href="https://forteroche.disqus.com/admin/moderate/#/pending">Commentaires</a>
                            <a href="{{ path("logout") }}" class="identification"> Logout </a>
                        {% endif %}
                        <hr>
                    </div>

                </div>
            {% endblock %}
            {% block body %}
            
            {% endblock %}

            {% block footer %}
                <footer class="col-md-offset-2 col-md-8 text-center">
                    <br>
                    <p>© 2016 Made by <a href="#">Framaru</a></p>

                </footer>
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js') }}"></script>
            <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
