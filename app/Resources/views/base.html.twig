<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Symfony - CMS{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.css') }}">
            <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
            <link href="https://fonts.googleapis.com/css?family=Titillium+Web:300,400" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {% block nav %}
                <div id="header">
                    <h2 id="logo">Symfony Made CMS</h2>
                    <hr>
                    <div id="nav">
                        <a href="{{ path("cms_homepage")}}">Home</a>
                        <a href="{{ path("cms_user_new") }}">New user</a>
                        <a href="{{ path("logout") }}">Logout</a>
                        <a href="{{ path("login") }}">Login</a>
                    </div>
                    <hr>
                </div>
            {% endblock %}
            {% block body %}
            
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js') }}"></script>
            <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('vendor/jquery-ui-1.12.0/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
